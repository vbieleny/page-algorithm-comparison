{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Launch QEMU",
            "type": "shell",
            "isBackground": true,
            "linux": {
                "command": "make -s template && make -s -j$(nproc) -C ./.template/.prac qemu-debug DEFAULTSTREAM=IO_TERMINAL",
                "problemMatcher": {
                    "pattern": {
                        "regexp": ".*"
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".*",
                        "endsPattern": ".*"
                    }
                }
            }
        }
    ]
}
